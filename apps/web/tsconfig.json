{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@ijancleaning/utils": ["../../packages/utils/src/index"],
      "@ijancleaning/ui": ["../../packages/ui/src/index"],
      "@ijancleaning/tw": ["../../packages/tw/src/index"],
      "@ijancleaning/hooks": ["../../packages/hooks/src/index"]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "../../packages/utils/src/group-by.spec.ts"
  ],
  "exclude": ["node_modules", "cypress"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
